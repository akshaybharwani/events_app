
<li>
  <span><strong><%= event.title %></strong></span>
  <span><%= event.description %></span>
  <span><%= image_tag event.picture.url if event.picture? %></span>
  <span><%= event.user.email %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(event.created_at) %> ago.
  </span>
  <% if current_user.voted_up_on? event %>
    <%= link_to unattend_event_path(event), method: :put do %>
        UnAttend
        <%= event.get_upvotes.size %>
    <% end %>
  <% else %>
    <%= link_to attend_event_path(event), method: :put do %>
        Attend
        <%= event.get_upvotes.size %>
    <% end %>
  <% end %>

  <span><%= link_to 'Show', event %></span>
  <% if current_user == event.user %>
    <span><%= link_to 'Edit', edit_event_path(event) %></span>
    <span><%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' } %></span>
  <% end %>
</li>

